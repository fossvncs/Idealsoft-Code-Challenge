<Window x:Class="WpfCrudApp.DeleteUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Delete User" Height="200" Width="350" 
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <TextBlock Text="Are you sure you want to delete this user?" 
                   FontSize="16"
                   VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,32,0,0"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,82,0,0">
            <Button Content="Yes" Width="80" Margin="5" Height="30" Click="DeleteButton_Click" Cursor="Hand" Background="GreenYellow" Foreground="Black" BorderBrush="Gray" BorderThickness="1"/>
            <Button Content="No" Width="80" Margin="5" Height="30" Click="CancelButton_Click" Cursor="Hand" Background="Red" Foreground="Black" BorderBrush="Gray" BorderThickness="1"/>

        </StackPanel>
    </Grid>
</Window>
