<Window x:Class="WpfCrudApp.DeleteUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Delete User" Height="200" Width="350" WindowStartupLocation="CenterOwner">

    <Grid Margin="10">
        <TextBlock Text="Are you sure you want to delete this user?" 
                   FontSize="16"
                   VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
            <Button Content="Yes" Width="80" Margin="5" Height="30" Click="DeleteButton_Click" Cursor="Hand" Background="LightGreen" Foreground="Black" BorderBrush="Gray" BorderThickness="1"/>
            <Button Content="No" Width="80" Margin="5" Height="30" Click="CancelButton_Click" Cursor="Hand" Background="Red" Foreground="Black" BorderBrush="Gray" BorderThickness="1"/>

        </StackPanel>
    </Grid>
</Window>
