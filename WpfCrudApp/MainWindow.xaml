<Window x:Class="WpfCrudApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCrudApp"
        mc:Ignorable="d"
        Title="Idealsoft Code Challenge" Height="450" Width="800">

    <Grid>
        <!-- Definição das linhas -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Linha para o botão -->
            <RowDefinition Height="*"/>
            <!-- Linha para a tabela (preenche o restante do espaço) -->
        </Grid.RowDefinitions>

        <!-- Botão Criar Usuário -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Right" Margin="10">
            <Button Content="Create User"
                    Padding="10,5"
                    Cursor="Hand"
                    Background="Green" Foreground="White"
                    Click="CreateUserButton_Click"/>
        </StackPanel>

        <!-- Tabela -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Users}" AutoGenerateColumns="False" 
                  IsReadOnly="True" Margin="10" 
                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

            <DataGrid.Columns>
                <!-- Distribui automaticamente as larguras das colunas -->
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="*"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Surname" Binding="{Binding Surname}" Width="*"/>
                <DataGridTextColumn Header="Phone" Binding="{Binding Phone}" Width="*"/>

                <!-- A coluna de Ações ocupa 20% do espaço -->
                <DataGridTemplateColumn Header="Actions" Width="0.5*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <!-- Botão Editar -->
                                <Button Content="Edit" 
                                        Margin="5,0,5,0" 
                                        CommandParameter="{Binding}" 
                                        Cursor="Hand"
                                        Background="DarkBlue" Foreground="White"
                                        Click="EditButton_Click"/>

                                <!-- Botão Deletar -->
                                <Button Content="Delete" 
                                        Margin="5,0,5,0" 
                                        Background="Red" 
                                        Foreground="White"
                                        Cursor="Hand"
                                        CommandParameter="{Binding}" 
                                        Click="DeleteButton_Click"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
